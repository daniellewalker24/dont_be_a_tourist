<% form_for(product, :url => {:id => params[:id]}, :html => {:method => "post", :multipart => true}) do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :summary %>
    <%= f.text_area :summary %>
  </p>

  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  
  <p>
    <%= f.label :picture1_id %>
    <%= f.comprehensive_image_field :picture1_id %>
  </p>
  
  <p>
    <%= f.label :display %>
    <%= f.check_box :display, :class => "checkbox" %>
  </p>

  <p>
    <% if product.new_record? %>
      <%= f.submit "Create", :class => 'submit' %>
    <% else %>
      <%= f.submit "Update", :class => 'submit' %>
    <% end %>
  </p>
  
<% end %>
