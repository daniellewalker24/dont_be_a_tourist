<% @page_title = "Edit Details" -%><h1>Edit Details</h1>      <% form_for(@site_profile, :url => {}, :html => {:method => "post"}) do |f| %>        <p>          <%= f.label :address %>          <%= f.text_area :address, :class => "summary" %>        </p>        <p>          <%= f.label :phone_number %>          <%= f.text_field :phone_number %>        </p>        <p>          <%= f.label :fax_number %>          <%= f.text_field :fax_number %>        </p>        <p>          <%= f.label :email %>          <%= f.text_field :email %>        </p>        <p>          <%= submit_tag "Update", :class => 'submit' %>        </p>      <% end %>