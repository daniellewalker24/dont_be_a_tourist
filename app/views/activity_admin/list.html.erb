<h1><%= @page_title = "View All Activities" -%></h1>
<div id="search">
<% form_tag({}, :method => "GET") do %>
  <%= text_field_tag(:search, (session[@list_name] || {})[:search]) %><%= submit_tag 'Search', :class => 'submit' %>
  <%= link_to "Clear", :search => "" %>
<% end %>
</div>
<% if @activity_pages.count != 0 -%>

  <%= admin_table({:columns =>[:name, :destination_id, :display, :last_updated],
    :list => @activities,
    :pages => @activity_pages
  })%>

<% else -%>

  There are currently no Activities in the system.

<% end -%>



