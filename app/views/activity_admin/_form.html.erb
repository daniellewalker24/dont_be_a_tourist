<% @include_tinymce_script = true %>

<% form_for(activity, :url => {:id => params[:id]}, :html => {:method => "post", :multipart => true}) do |f| %>

  <p>
    <%= f.label :destination_id %>
    <%= f.default_collection_select :destination_id %>
  </p>


  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :summary %>
    <%= f.tinymce_text_area :summary %>
  </p>

  <p>
    <%= f.label :picture1_id %>
    <%= f.comprehensive_image_field :picture1_id %>
  </p>

  <p>
    <%= f.label :display %>
    <%= f.check_box :display %>
  </p>

  <p>
    <% if activity.new_record? %>
    <%= f.submit "Create", :class => 'submit' %>
    <% else %>
    <%= f.submit "Update", :class => 'submit' %>
    <% end %>
  </p>
<% end %>
