<% if @thank_you -%>
  <!-- thank you message -->
  <h1>Congratulations!</h1>
  <p>Your offer has been accepted. You will be able to book trips using this offer from the 21st September. Don't worry, we will email you to remind you of this!</p>
  <p><%= link_to "Continue browsing", :controller=>"web", :action=>"index" %></p>
<% else -%>

  <%= image_tag "25_voucher.gif", :class=>"image_right", :alt=>"Twenty Five Pounds Trip Voucher", :border=>"0", :vspace=>"0", :hspace=>"0" %>
  <h1><%= @page_title = "Claim Your &pound;25 Offer" %></h1>
  <p><strong>Hello and welcome!</strong> To claim your &pound;25 voucher to spend on your next overnight trip please enter your promotional code and email address below.</p>
  
  <div class="clear"></div>
  
  <!-- error message -->
  <% unless flash[:error].blank? -%>
    <div id="flash_error">
      <%= flash[:error] %>
    </div>
  <% end -%>

  <!-- contact form -->
  <% form_tag do %>
    <p>
      <%= label_tag :promo_code %><br />
      <%= text_field_tag :promo_code, "", :class=>"med" %>
    </p>
    <p>
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </p>
    <p>
      <%= submit_tag 'GET YOUR DISCOUNT', :class=>"submit" , :style=>"float: none;"%>
    </p>
  <% end -%>
  
  <p class="small">One FREE &pound;25 voucher per person. Available to new bookers only. Not to be combined with any other offer or deal.</p>

<% end -%>

