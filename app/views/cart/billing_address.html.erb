<% @page_title = "PayPal payment" %>

<div id="content">
<h1>PayPal payment</h1>
<% form_for (@user, :url => {}, :html => {:method => "post", :multipart => true}) do |f| %>

  <p>
    <label for="notes">Notes/Promotional Code</label>
    <%= text_area_tag :notes %>
  </p>

  <p align="right">
    I agree to the <%= link_to 'terms and conditions', {:controller => :web, :action => :terms}, :popup => true %>
    <%= check_box_tag :agree, 1, nil, :class => 'checkbox' %>
  </p>


  <h3><%= flash[:notice] %></h3>
  <p>
    <%= f.submit 'CONTINUE', :class => 'submit' %>
  </p>

<% end %>
</div>

<div class="right">
<%= render :partial => 'web/right_cart', :locals => {:cart => @cart} %>
</div>
