<h1><%= @page_title = "View All Reservation" -%></h1>
<div id="search">
<% form_tag({}, :method => "GET") do %>
  <%= text_field_tag(:search, (session[@list_name] || {})[:search]) %><%= submit_tag 'Search', :class => 'submit' %>
  <%= link_to "Clear", :search => "" %>
<% end %>
</div>
<% if @reservation_pages.count != 0 -%>

  <%= admin_table({:columns =>[:name, :name, :email, :telephone, :trip, :male, :female, :last_updated],
    :list => @reservation,
    :pages => @reservation_pages
  })%>

<% else -%>

  There are currently no Reservation in the system.

<% end -%>



